{
  "name": "pet-card-generator",
  "version": "1.0.0",
  "description": "Pet Card Generator with DOMPurify Security Integration",
  "type": "module",
  "scripts": {
    "dev": "vite --host",
    "dev:emulators": "firebase emulators:start --only auth,firestore,functions,storage",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext js,jsx,ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext js,jsx,ts,tsx --fix",
    "format:check": "prettier --check .",
    "format": "prettier --write .",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:unit": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:staging": "playwright test --config=playwright.staging.config.ts",
    "test:e2e:production": "playwright test --config=playwright.production.config.ts",
    "test:lighthouse": "lhci autorun",
    "setup:env": "cp .env.example .env.local",
    "setup:playwright": "playwright install",
    "docker:build": "docker build -f docker/Dockerfile -t pet-card-generator .",
    "docker:run": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "deploy:staging": "./scripts/deploy.sh --environment staging",
    "deploy:production": "./scripts/deploy.sh --environment production",
    "rollback:staging": "./scripts/rollback.sh --environment staging",
    "rollback:production": "./scripts/rollback.sh --environment production",
    "firebase:init": "firebase init",
    "firebase:deploy": "firebase deploy"
  },
  "dependencies": {
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-popover": "^1.1.14",
    "@radix-ui/react-progress": "^1.0.3",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-tabs": "^1.1.12",
    "@sentry/react": "^9.40.0",
    "@sentry/tracing": "^7.120.3",
    "@types/dompurify": "^3.0.5",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "dompurify": "^3.0.8",
    "firebase": "^10.8.0",
    "lucide-react": "^0.344.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^7.7.0",
    "tailwind-merge": "^2.2.1"
  },
  "devDependencies": {
    "@lhci/cli": "^0.12.0",
    "@playwright/test": "^1.40.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^30.0.0",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.56",
    "@types/react-dom": "^18.2.19",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.17",
    "eslint": "^8.56.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "jsdom": "^26.1.0",
    "postcss": "^8.4.35",
    "prettier": "^3.1.0",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.2.2",
    "vite": "^5.1.4",
    "vitest": "^1.3.0"
  }
}
